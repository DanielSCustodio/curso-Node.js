<h1>Usuários cadastrados</h1>
<div class="container">
  {{#each users}}
    <div class="item">
      <p>Nome: {{this.name}}</p>
      <span>Profissão: {{this.occupation}}</span>
      <div class="actions">
        <a href="/users/{{this.id}}">Ver detalhes</a>
        <a href="/users/edit/{{this.id}}">Editar</a>
        <form action="/users/delete/{{this.id}}" method="POST">
          <input type="submit" value="Excluir" class="btn-delete">
        </form>
      </div>
    </div>
  {{/each}}
</div>
